azul = #22bce0
gris_oscuro=#433
naranja=#DD4F24
gris_texto=#7A7A7A

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?k7x92h');
	src:url('../fonts/icomoon.eot?#iefixk7x92h') format('embedded-opentype'),
		url('../fonts/icomoon.woff?k7x92h') format('woff'),
		url('../fonts/icomoon.ttf?k7x92h') format('truetype'),
		url('../fonts/icomoon.svg?k7x92h#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Verdana
	font-size 16px

footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%


	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

header
	background gris_oscuro
	box-shadow 0 5px 0  rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1

	.logo
		border-right 1px solid blue
		float left
		width 60px
		img
			width 52px

	.titular
		margin 0 100px 0 70px

		.filtro
			font-size 15px
			color blue
			text-decoration none
			font-weight bold
			font-style italic

		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -0.3px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

			&:before
				display inline-block
				font-family "iconitos"
				content: "\e600"
				margin 0 3px 0 0
			
		.titulo
			font-size 20px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			top 15px
			text-align right
			text-decoration none
			width 50%
			z-index 0

			&:after
				display inline-block
				font-family "iconitos"
				content "\e602"
				text-shadow 1px 1px 0px black

nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		left 0
	

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap

		li
			display inline-block
			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.5em
				text-decoration none
				&:after
					content " - "

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.estrellita
					text-decoration none
					&:after
						font-family "iconitos"
						color #e0d561
						content: "\e601"


			.votos
				float left

				.down
				.up
					text-decoration none

				.down
					color red
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e602"
						vertical-align bottom

				.up
					color green
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e603"
						vertical-align bottom

				.total
					display inline-block

		.descripcion
			
			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					margin 0 1em 0 0

				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left
				margin 0

				img
					height 160px
					vertical-align top
					width 120px


@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					left 0px
					font-size 2.5em
					position absolute
					top -10px
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%